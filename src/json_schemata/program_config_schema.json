{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "influxdb",
    "tripleStore",
    "buffer"
  ],
  "properties": {
    "heartbeat_interval": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "buffer": {
      "required": ["size"],
      "properties": {
        "size": {
          "type": "number",
          "multipleOf": 1.0,
          "minimum": 1
        },
        "push_interval": {
          "type": "number",
          "multipleOf": 1.0,
          "minimum": 1
        }
      },
      "type": "object"
    },
    "include": {
      "items": {
        "enum": [
          "actuators",
          "sensors",
          "services"
        ],
        "type": "string"
      },
      "type": "array",
      "uniqueItems": true
    },
    "influxdb": {
      "required": [
        "bucket",
        "token",
        "host",
        "organization"
      ],
      "properties": {
        "host": {
          "type": "string",
          "format": "uri",
          "minLength": 1
        },
        "token": {
          "type": "string",
          "minLength": 1
        },
        "bucket": {
          "type": "string",
          "minLength": 1
        },
        "organization": {
          "type": "string",
          "minLength": 1
        }
      },
      "type": "object"
    },
    "tripleStore": {
      "required": [
        "host"
      ],
      "properties": {
        "host": {
          "type": "string",
          "format": "uri",
          "minLength": 1
        },
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}

